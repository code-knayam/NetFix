{
  "manifest_version": 3,
  "name": "NetFix",
  "version": "1.0.0",
  "description": "Control your Netflix viewing habits",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "assets": ["netfix-logo.png"] 
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "netfix-logo.png",
      "32": "netfix-logo.png",
      "48": "netfix-logo.png",
      "128": "netfix-logo.png"
    }
  },
  "icons": {
    "16": "netfix-logo.png",
    "32": "netfix-logo.png",
    "48": "netfix-logo.png",
    "128": "netfix-logo.png"
  }
} 